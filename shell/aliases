# vi: ft=sh

# General

alias ag="ag --path-to-agignore $HOME/.agignore"
alias serve="browser-sync start -s"
alias ll="ls -l"
alias la="ls -al"

## Colors
alias ls="ls --color=auto"
alias dir="dir --color=auto"
alias vdir="vdir --color=auto"
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

# Python
alias venv="python3 -m venv"

# Git
alias gd="git diff"
alias gl="git pull --prune"
alias gp="git push"
alias gpf="git push -f"

### Staging
alias gst="git status"
alias ga="git add -p"

### Committing
alias gc="git commit -v"
alias gca="git commit -v --all"
alias gca!="git commit -v --all --amend"
alias gcp="git commit -v --patch"
alias gcp!="git commit -v --patch --amend"

### Branching
alias gb="git branch"
alias gba="git branch -a"
alias gco="git checkout"
alias gcm="git checkout master"

### Rebasing
alias grb="git rebase"
alias grbm="git rebase master"
alias grbom="git rebase origin/master"
alias grbi="git rebase --interactive"
alias grbim="git rebase --interactive master"
alias grbc="git rebase --continue"
alias grba="git rebase --abort"

### Cherry Picking
alias gcp="git cherry-pick"
alias gcpc="git cherry-pick --continue"
alias gcpa="git cherry-pick --abort"
